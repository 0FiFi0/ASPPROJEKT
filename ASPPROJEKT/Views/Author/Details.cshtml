@{
}

<h1>Szczegóły</h1>
<hr />
<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Adres 
        </dt>
        <dd class="col-sm-10">
            @Model.Address.City, @Model.Address.Street, @Model.Address.PostalCode
        </dd>
    </dl>
</div>
<hr />
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
    <a class="btn btn-primary" asp-action="Index">Powrót</a>
</div>