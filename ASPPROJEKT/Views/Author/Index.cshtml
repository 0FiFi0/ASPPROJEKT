@model List<Data.Entities.AuthorEntity>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Autorzy</h1>
<hr/>
<p>
    <a class="btn btn-primary" asp-action="Create">Stwórz nowego autora</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Opis
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
