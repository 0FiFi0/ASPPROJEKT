@{
}

<h1>Stwórz autora</h1>

<hr />
<div>
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name">Imię</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Opis</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddressId">Adres</label>
            <select class="form-control" asp-for="AddressId">
                @foreach (var item in ViewBag.AddressList)
                {
                    <option value="@item.Id">@item.City, @item.Street @item.PostalCode</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <hr />
        <div class="form-group">
            <input type="submit" value="Utwórz" class="btn btn-success" />
            <a class ="btn btn-primary" asp-action="Index">Powrót</a>
        </div>
    </form>
</div>
