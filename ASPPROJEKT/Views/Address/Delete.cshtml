@model Data.Entities.AddressEntity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form asp-action="Delete" method="post" >
    <input asp-for="Id" type="hidden" />
    <h3>Czy na pewno usunąć ten adres?</h3>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Miasto
            </dt>
            <dd class="col-sm-10">
                @Model.City
            </dd>
            <dt class="col-sm-2">
                Ulica
            </dt>
            <dd class="col-sm-10">
                @Model.Street
            </dd>
            <dt class="col-sm-2">
                Kod pocztowy
            </dt>
            <dd class="col-sm-10">
                @Model.PostalCode
            </dd>
        </dl>
    </div>
    <hr />
    <button type="submit" class="btn btn-danger">Tak</button>
    <a class="btn btn-success" asp-controller="Address" asp-action="Index">Nie</a>
</form>
