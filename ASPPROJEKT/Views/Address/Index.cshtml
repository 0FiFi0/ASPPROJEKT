@model List<Data.Entities.AddressEntity>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Adresy</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create">Stwórz nowy adres</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Miasto
            </th>
            <th>
                Ulica
            </th>
            <th>
                Kod pocztowy
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.City
                </td>
                <td>
                    @item.Street
                </td>
                <td>
                    @item.PostalCode
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
