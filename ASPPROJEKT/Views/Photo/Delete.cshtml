@model Data.Entities.PhotoEntity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<form asp-action="Delete" method="post" >
    <input asp-for="PhotoId" type="hidden" />
    <h3>Czy na pewno usunąć to zdjęcie?</h3>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Aparat
            </dt>
            <dd class="col-sm-10">
                @Model.Camera
            </dd>
            <dt class="col-sm-2">
                Opis
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Rozdzielczość
            </dt>
            <dd class="col-sm-10">
                @Model.Resolution
            </dd>
            <dt class="col-sm-2">
                Data stworzenia
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedDate
            </dd>

            <dt class="col-sm-2">
                Format
            </dt>
            <dd class="col-sm-10">
                @Model.Format
            </dd>

            <dt class="col-sm-2">
                Imię autora
            </dt>
            <dd class="col-sm-10">
                @Model.Author.Name
            </dd>
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Tak</button>
    <a class="btn btn-success" asp-controller="Photo" asp-action="PagedIndex">Nie</a>
</form>
