@model List<Data.Entities.PhotoEntity>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Zdjęcia</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj nowe zdjęcie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Aparat
            </th>
            <th>
                Opis
            </th>
            <th>
                Rozdzielczość
            </th>
            <th>
                Data stworzenia
            </th>
            <th>
                Format
            </th>
            <th>
                Imię autora
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Camera
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Resolution
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td>
                    @item.Format
                </td>
                <td>
                    @item.Author.Name
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.PhotoId">Szczegóły</a> 
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.PhotoId">Edytuj</a> 
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.PhotoId">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
